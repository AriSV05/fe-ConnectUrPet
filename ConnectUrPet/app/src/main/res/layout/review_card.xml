<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Saffron_Border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/puntuation_line"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/one_point"
            android:layout_width="30dp"
            android:src="@drawable/ic_bone"
            android:layout_height="30dp"
            app:tint="@color/Royal_Blue" />
        <ImageView
            android:id="@+id/two_point"
            android:layout_width="30dp"
            android:src="@drawable/ic_bone"
            android:layout_height="30dp"
            app:tint="@color/Royal_Blue" />
        <ImageView
            android:id="@+id/three_point"
            android:layout_width="30dp"
            android:src="@drawable/ic_bone"
            android:layout_height="30dp"
            app:tint="@color/Royal_Blue" />
        <ImageView
            android:id="@+id/four_point"
            android:layout_width="30dp"
            android:src="@drawable/ic_bone"
            android:layout_height="30dp"
            app:tint="@color/Royal_Blue" />
        <ImageView
            android:id="@+id/five_point"
            android:layout_width="30dp"
            android:src="@drawable/ic_bone"
            android:layout_height="30dp"
            app:tint="@color/Royal_Blue" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/review_tv"
        style="@style/Black_Texts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/puntuation_line" />


</androidx.constraintlayout.widget.ConstraintLayout>